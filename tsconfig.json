{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "Bundler",
    "types": ["expo", "react", "react-native"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      { "name": "@react-native/typescript-plugin" }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
